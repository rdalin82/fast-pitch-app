    <link href="https://fonts.googleapis.com/css?family=Ubuntu|Roboto|Josefin+Sans|Pangolin|Shadows+Into+Light|PT+Sans:400,700|Lato:100,300,400" rel="stylesheet">
    <link rel="stylesheet" href="css/login.css">

  </head>

  <body>
    <%= render "layouts/alerts" %>
    <%= render "layouts/navbar" %>
    <%= yield %>
    <script src="js/jquery.js"></script>
    <script src="js/login.js"></script>
  </body>
</html>
